<h1>Товары:</h1>
{{#if product.length}}
{{#each product}}
<div class="row">
	<div class="col s6 offset-s3">
		<div class="card">
			<div class="card-image">
				<img src="{{url}}" alt="{{name}}">
			</div>
			<div class="card-content">
				<span class="card-title">Товар: {{name}}</span>
				<div class="price">Цена: {{price}} рублей</div>
			</div>
			<div class="card-action">
				<a href="/product/{{id}}">Открыть товар</a>
			</div>
		</div>
	</div>
</div>
{{/each}}
{{else}}
<strong>
	<p class="red-text">Товаров пока нет.</p>
</strong>
{{/if}}